    </dependency>
    <dependency>
      <groupId>io.xuxiaowei.nacos</groupId>
      <artifactId>nacos-prometheus</artifactId>
      <version>${nacos.version}</version>
      <exclusions>
        <exclusion>
          <groupId>org.apache.tomcat.embed</groupId>
