    <version>3.4.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>laokou-nacos</artifactId>

  <properties>
    <!--nacos版本-->
    <nacos.version>2.4.2</nacos.version>
    <!--spring-boot版本-->
    <spring-boot.version>2.7.18</spring-boot.version>
    <!--postgresql版本-->
    <postgresql.version>42.7.4</postgresql.version>
    <!--liquibase-core版本-->
    <liquibase-core.version>4.29.2</liquibase-core.version>
    <!--protobuf-java版本-->
    <protobuf-java.version>3.25.4</protobuf-java.version>
    <!--commons-io版本-->
    <commons-io.version>2.16.1</commons-io.version>
    <!--grpc版本-->
    <grpc.version>1.66.0</grpc.version>
    <!--error_prone_annotations版本-->
    <error_prone_annotations.version>2.32.0</error_prone_annotations.version>
    <!--hessian版本-->
