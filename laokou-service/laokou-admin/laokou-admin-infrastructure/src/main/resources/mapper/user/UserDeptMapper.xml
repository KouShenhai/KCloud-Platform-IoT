<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.admin.user.gatewayimpl.database.UserDeptMapper">

  <delete id="deleteUserDeptById">
    delete from boot_sys_user_dept where id = #{userDeptDO.id}
  </delete>

  <select id="selectUserDeptIdsByUserIds" resultType="java.lang.Long">
    select id
    from boot_sys_user_dept
    where user_id in
    <foreach collection="userIds" item="item" open="(" close=")">
      #{item}
    </foreach>
  </select>

  <select id="selectDeptIdsByUserId" resultType="java.lang.String">
    select dept_id
    from boot_sys_user_dept
    where user_id = #{userId}
  </select>
</mapper>
