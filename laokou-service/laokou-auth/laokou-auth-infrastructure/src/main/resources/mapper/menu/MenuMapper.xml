<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.auth.gatewayimpl.database.MenuMapper">
  <select id="selectPermissions" resultType="string">
    SELECT permission
    FROM boot_sys_menu
    where type = 1
      and del_flag = 0
    GROUP BY permission
  </select>

  <select id="selectPermissionsByUserId" resultType="string">
    SELECT DISTINCT m.permission
    FROM boot_sys_menu m
    INNER JOIN boot_sys_role_menu rm ON m.id = rm.menu_id
    INNER JOIN boot_sys_user_role ur ON rm.role_id = ur.role_id
    WHERE ur.user_id = #{userId}
        AND m.del_flag = 0
  </select>

</mapper>
